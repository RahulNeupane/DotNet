@model List<firstday.Models.teacher>
@{
    ViewBag.Title = "index";
    int sn = 0;
}

<link rel="stylesheet" href="~/Content/index.css" />
<div id="form">
    <h2>Teachers</h2>
    <table border="1">
        <tr>
            <th>SN</th>
            <th>ID</th>
            <th>Name</th>
            <th>Salary</th>
        </tr>
        @foreach(var tdata in Model)
        {
            <tr>
                <td>@(++sn)</td>
                <td>@tdata.id</td>
                <td>@tdata.name</td>
                <td>@tdata.salary</td>
                <td><a href="@Url.Action("edit",new {id=tdata.id})"><h4>Edit</h4></a></td>
                <td><a href="@Url.Action("deleteData",new {id=tdata.id})"><h4>Delete</h4></a></td>
                   
            </tr>
        }
    </table>
</div>
<a href="@Url.Action("create")"><h4>Add new records</h4></a>


