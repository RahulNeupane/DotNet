@model firstday.Models.book
@{
    ViewBag.Title = "edit";
}
<link rel="stylesheet" href="~/Content/index.css">
<h2>Edit details</h2>
@using (Html.BeginForm("updateData", "book")) //teacher is controller name
{
    <input type="hidden" name="id" value="@Model.id" />
    <label class="col-md-2">Title</label>
    <div class="col-md-4">
        <input type="text" name="title" class="form-control" value="@Model.title" required>
    </div>
    <label class="col-md-2">Author</label>
    <div class="col-md-4">
        <input type="text" name="author" class="form-control" value="@Model.author" required>
    </div>
    <button class="btn">Edit</button>
}
